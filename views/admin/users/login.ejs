<%- include('../../partials/header.ejs')%>

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-4 ">
            <div class="card mt-5">
                <div class="card-header">
                    <h1>Login Administrador</h1>
                </div>
                <div class="card-body">
                    <form action="/login" method="post" id="formulario" >
                        <label for="">Email</label>
                        <input type="email" class="form-control" placeholder="Email de Usuário" name="email">
                        <label for="">Senha</label>
                        <input type="password" class="form-control" placeholder="Senha de Usuário" name="senha" id="senha">
                        <div class="d-flex justify-content-end">
                            <button class="btn btn-primary mt-5">Fazer Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>


